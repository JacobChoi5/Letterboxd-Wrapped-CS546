<main>
    <p>Release year: {{movie.date}}</p>
    <p>Tagline: {{movie.tagline}}</p>
    <p>Description: {{movie.description}}</p>
    <p>Length: {{movie.minute}} minutes</p>
    <p>Rating: {{movie.rating}}</p>

    <p>Directors:</p>
    {{#each movie.directors}}
    <p>{{this}}</p>
    {{/each}}

    <p>Actors:</p>
    {{#each movie.actors}}
    <p>{{this.name}} as {{this.role}}</p>
    {{/each}}

    <p>Genres:</p>
    {{#each movie.genres}}
    <p>{{this}}</p>
    {{/each}}

    <p>Themes:</p>
    {{#each movie.themes}}
    <p>{{this}}</p>
    {{/each}}

    <p>Studios:</p>
    {{#each movie.studios}}]
    <p>{{this}}</p>
    {{/each}}

    <p>Comment:</p>
    <form action="/movies/{{movie._id}}/comment" method="POST">
        <input type="text" name="text">
        <button type="submit">Add Comment</button>
    </form>

    <p>Comments:</p>
    {{#each movie.comments}}
    {{> comment}}
    {{/each}}

    <form action="/movies/{{movie._id}}/add" method="POST">
        <button type="submit">Add Movie</button>
    </form>

    <img src="{{movie.posterUrl}}">
</main>